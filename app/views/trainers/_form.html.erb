<%= form_for @trainer do |f| %>
   
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :pokemons %> 
        <% if @trainer.pokemons.empty? %>
        <%= f.collection_select :pokemon_ids, Pokemon.all, :id, :species %>
        <% else %>
        <%= f.collection_select :pokemon_ids, @trainer.pokemons, :id, :species %>
        <% end %>
    <%= f.submit "Catch" %>
    <% end %>